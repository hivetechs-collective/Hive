{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hive Consensus",
  "version": "2.0.3",
  "identifier": "com.hivetechs.consensus",
  "build": {
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build",
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Hive Consensus",
        "fullscreen": false,
        "height": 900,
        "width": 1400,
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "dragDropEnabled": true,
        "transparent": false,
        "focus": true,
        "maximized": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "freezePrototype": true
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "resources": [],
    "copyright": "Â© 2024 HiveTechs Collective",
    "category": "DeveloperTool",
    "shortDescription": "AI-powered codebase intelligence",
    "longDescription": "Hive Consensus provides AI-powered codebase intelligence with multi-model consensus for superior code understanding and generation.",
    "linux": {
      "deb": {
        "depends": []
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "signCommand": null
    },
    "iOS": {
      "minimumSystemVersion": "13.0"
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [],
      "pubkey": ""
    }
  }
}