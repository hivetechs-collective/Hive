{
  "name": "hive-consensus",
  "productName": "Hive Consensus",
  "version": "1.8.486",
  "description": "Hive Consensus - AI-powered development environment",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "verify:modules": "node scripts/verify-all-modules.js",
    "verify:types": "tsc --noEmit",
    "verify:paths": "node scripts/verify-production-paths.js",
    "verify:all": "npm run verify:modules && npm run verify:types && npm run verify:paths",
    "prebuild": "npm run verify:modules && npm run bundle-python",
    "build": "webpack --config webpack.main.config.ts && webpack --config webpack.renderer.config.ts",
    "build:safe": "npm run verify:all && npm run build",
    "bundle-python": "node scripts/bundle-python-lite.js",
    "make": "npm run prebuild && electron-forge make",
    "make:production": "npm run verify:all && npm run make",
    "make:test": "npm run make:production && npm run test:dmg",
    "test:dmg": "node scripts/test-dmg.js",
    "smoke:memory-health": "node scripts/smoke-memory-health.js",
    "clean": "rm -rf .webpack/ out/ node_modules/.cache/ dist/ .electron-forge/",
    "build:fresh": "npm run clean && npm run make:production",
    "build:complete": "node scripts/build-production-dmg.js",
    "sign:notarize:local": "bash scripts/sign-notarize-local.sh",
    "release:local": "bash scripts/local-sign-and-upload.sh",
    "build:visual": "node scripts/build-with-progress.js",
    "requirements": "node scripts/comprehensive-build-check.js",
    "test": "npm run test:welcome",
    "test:ui": "node scripts/run-ui-tests.js",
    "test:welcome": "npm run verify:types && node scripts/test-welcome-db.js && ts-node tests/welcome-logic.test.ts && ts-node tests/template-scaffold.test.ts && ts-node tests/clone-validate.test.ts && ts-node tests/welcome-layout.test.ts && ts-node tests/backup-policy.test.ts && ts-node tests/panel-state.test.ts && ts-node tests/welcome-prefs.test.ts && ts-node tests/analytics-compute.test.ts && ts-node tests/center-view.test.ts && ts-node tests/openrouter-sync.test.ts",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test:dmg:memory": "node scripts/test-dmg-memory-service.js",
    "verify:dmg:helpers": "node scripts/verify-dmg-helpers.js"
  },
  "keywords": [],
  "author": {
    "name": "Verone Lazio",
    "email": "verone.lazio@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/plugin-webpack": "^7.8.3",
    "@playwright/test": "^1.47.0",
    "@electron/fuses": "^1.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^18.19.0",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.11.0",
    "electron": "37.3.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "fs-extra": "^11.3.1",
    "mini-css-extract-plugin": "^2.9.4",
    "node-loader": "^2.1.0",
    "style-loader": "^3.3.4",
    "tar": "^7.4.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "abort-controller": "^3.0.0",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "monaco-editor": "^0.52.2",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.0.0",
    "simple-git": "^3.28.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0"
  }
}