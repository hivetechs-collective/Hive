{
  "name": "quality-gate",
  "description": "Enforce code quality standards",
  "events": ["quality_gate_check"],
  "conditions": {
    "type": "and",
    "conditions": [
      {
        "type": "context_variable",
        "key": "complexity",
        "operator": "less_than",
        "value": 10
      },
      {
        "type": "context_variable",
        "key": "test_coverage",
        "operator": "greater_or_equal",
        "value": 80
      }
    ]
  },
  "actions": [
    {
      "type": "modify_context",
      "operation": "set",
      "key": "quality_passed",
      "value": true
    },
    {
      "type": "notification",
      "channel": "terminal",
      "message": "âœ… Quality gate passed: complexity=${complexity}, coverage=${test_coverage}%"
    }
  ]
}