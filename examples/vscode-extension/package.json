{
  "name": "hive-ai-vscode",
  "displayName": "Hive AI",
  "description": "AI-powered code analysis and assistance using HiveTechs Consensus",
  "version": "2.0.0",
  "publisher": "hivetechs",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Linters",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "artificial intelligence",
    "code analysis",
    "rust",
    "consensus",
    "hive",
    "mcp"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hive.askQuestion",
        "title": "Ask Hive AI",
        "category": "Hive AI",
        "icon": "$(question)"
      },
      {
        "command": "hive.analyzeCode",
        "title": "Analyze with Hive AI",
        "category": "Hive AI",
        "icon": "$(search)"
      },
      {
        "command": "hive.explainCode",
        "title": "Explain Code",
        "category": "Hive AI",
        "icon": "$(info)"
      },
      {
        "command": "hive.improveCode",
        "title": "Improve Code",
        "category": "Hive AI",
        "icon": "$(lightbulb)"
      },
      {
        "command": "hive.generateTests",
        "title": "Generate Tests",
        "category": "Hive AI",
        "icon": "$(beaker)"
      },
      {
        "command": "hive.showStatus",
        "title": "Show Status",
        "category": "Hive AI",
        "icon": "$(pulse)"
      },
      {
        "command": "hive.openSettings",
        "title": "Open Settings",
        "category": "Hive AI",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "hive.explainCode",
          "group": "hive@1"
        },
        {
          "when": "editorHasSelection",
          "command": "hive.improveCode",
          "group": "hive@2"
        },
        {
          "when": "editorHasSelection",
          "command": "hive.generateTests",
          "group": "hive@3"
        }
      ],
      "editor/title": [
        {
          "command": "hive.analyzeCode",
          "when": "resourceExtname in hive.supportedLanguages",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "hive.askQuestion"
        },
        {
          "command": "hive.analyzeCode"
        },
        {
          "command": "hive.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "hive.improveCode",
          "when": "editorHasSelection"
        },
        {
          "command": "hive.generateTests"
        },
        {
          "command": "hive.showStatus"
        },
        {
          "command": "hive.openSettings"
        }
      ]
    },
    "keybindings": [
      {
        "command": "hive.askQuestion",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h"
      },
      {
        "command": "hive.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "hive.improveCode",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "Hive AI",
      "properties": {
        "hive.mcpServerUrl": {
          "type": "string",
          "default": "http://127.0.0.1:7777",
          "description": "URL of the Hive AI MCP server"
        },
        "hive.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze files when opened"
        },
        "hive.consensusProfile": {
          "type": "string",
          "enum": ["speed", "balanced", "cost", "elite"],
          "default": "balanced",
          "description": "Consensus profile for AI analysis"
        },
        "hive.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered diagnostics"
        },
        "hive.enableCompletions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code completions"
        },
        "hive.supportedLanguages": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [".rs", ".js", ".ts", ".py", ".java", ".cpp", ".c", ".go", ".php", ".rb"],
          "description": "File extensions supported by Hive AI"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "hiveAiExplorer",
          "name": "Hive AI",
          "when": "hive.activated"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hiveAi",
          "title": "Hive AI",
          "icon": "$(beaker)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "ws": "^8.13.0"
  }
}